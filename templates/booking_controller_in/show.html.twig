{% extends 'base.html.twig' %}

{% block title %}Booking{% endblock %}

{% block body %}
    <h1>Booking</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ booking.id }}</td>
            </tr>
            <tr>
                <th>Booking_date</th>
                <td>{{ booking.bookingDate ? booking.bookingDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Booking_time</th>
                <td>{{ booking.bookingTime ? booking.bookingTime|date('H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Number_people</th>
                <td>{{ booking.numberPeople }}</td>
            </tr>
            <tr>
                <th>First_name</th>
                <td>{{ booking.firstName }}</td>
            </tr>
            <tr>
                <th>Last_name</th>
                <td>{{ booking.lastName }}</td>
            </tr>
            <tr>
                <th>Comment</th>
                <td>{{ booking.comment }}</td>
            </tr>
            <tr>
                <th>Creation_date</th>
                <td>{{ booking.creationDate ? booking.creationDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_booking_controller_in_index') }}">back to list</a>

    <a href="{{ path('app_booking_controller_in_edit', {'id': booking.id}) }}">edit</a>

    {{ include('booking_controller_in/_delete_form.html.twig') }}
{% endblock %}
