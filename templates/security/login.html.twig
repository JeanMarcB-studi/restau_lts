{% extends 'base.html.twig' %}
{# {% extends 'base_restau.html.twig' %} #}

{% block title %}Connexion{% endblock %}

{% block body %}

<h1 class="text-center my-5">
    IDENTIFICATION
</h1>

<div class="p-2">
    <article class="container-sm myWidth mx-auto border rounded-2">
        <div class="row">
            <div class="col-12 mt-3">

                <form class="container-sm myWidth mx-auto myShadow" method="post" >
                    {% if error %}
                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}

                    {% if app.user %}
                        <div class="mb-3">
                            Vous êtes connecté : {{ app.user.userIdentifier }},
                            <pre>
                            {# {{ dump(app.user) }} #}
                            </pre>
                            <a href="{{ path('app_logout') }}">Se déconnecter</a>
                        </div>
                    {% endif %}

                    <h2 class="mb-3">Veuillez entrer vos identifiants : </h2>
                
                    <label for="inputEmail"  class="form-label">Email :</label>
                    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
                
                    <label for="inputPassword" class="form-label mt-3">Mot de passe :</label>
                    <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>

                    <input type="hidden" name="_csrf_token"
                        value="{{ csrf_token('authenticate') }}"
                    >

                {#
                    Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                    See https://symfony.com/doc/current/security/remember_me.html

                #}
                    {# <div class="checkbox my-3">
                        <label>
                            <input type="checkbox" name="_remember_me"> Se rappeler de moi
                        </label>
                    </div> #}

                    <button class="btn btn-lg btn-outline-info my-4" type="submit">
                        Connexion
                    </button>
                </form>

            </div>
        </div>
    </article>
</div>


<div class="container-sm myWidth mx-auto">
    <div class="row px-2">
        <div class="col">
            <a class="nav-link mx-auto my-3" href="{{ path('app_register') }}">
            Nouveau sur le site ? <span class="text-info">S'inscrire</span>
            </a>
        </div>
    </div>
</div>



{% endblock %}
